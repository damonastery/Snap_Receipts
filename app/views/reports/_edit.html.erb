<div id="edit_report_<%= report.id %>" class="dev-test">
  <%= form_for report do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
    <%= f.label :description %><br>
    <%= f.text_field :description %><br><br>
    <%= f.submit %>
  <% end %>
</div>

<script>
  // Edit the report form
  $(document).ready(function() {
    var toggled = false;

    var buttonText = {
      true: "Edit",
      false: "Hide Form"
    };

    $("#edit_report_<%= report.id %>").hide();
    $("#report_<%= report.id %>").on('click', function(){
      toggled = !toggled;

      var text = buttonText[!toggled];

      $("#edit_report_<%= report.id %>").slideToggle(toggled);
      $(this).html(text)
        .toggleClass("btn-primary", !toggled)
        .toggleClass("btn-dark", toggled);
    });
  }); //end of document ready
</script>