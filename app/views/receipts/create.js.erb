<% if @receipt.errors.any? %>
  $(".receipt-form").html("<%= j render '/receipts/new' %>");
<% else %>
  $(".receipts-container").prepend("<%= j render partial: '/receipts/discussion', locals: {receipt: @receipt} %>");
  <% @receipt = Receipt.new %>
  $(".receipt-form").html("<%= j render '/receipts/new' %>");
<% end %>